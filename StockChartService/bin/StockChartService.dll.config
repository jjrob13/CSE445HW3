<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5"/>
  </system.web>
  <system.serviceModel>
    <services>
      <service name="StockChartService.Service1"
               behaviorConfiguration="Meta">
        <endpoint name="rest"
                  address=""
                  binding="webHttpBinding"
                  contract="StockChartService.IService1"
                  behaviorConfiguration="REST"></endpoint>
      </service>
    </services>
    <bindings>
      <basicHttpBinding>
        <binding name="webchartSoap" />
        <binding name="BasicHttpBinding_IService1" />
        <binding name="BasicHttpBinding_IStockDataPointsService" />
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://www.gxchart.com/service/webchart.asmx"
        binding="basicHttpBinding" bindingConfiguration="webchartSoap"
        contract="ChartMakerService.webchartSoap" name="webchartSoap" />
      <endpoint address="http://10.1.11.192:8001/StockTickerService/Service1.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IService1"
        contract="GetTickerService.IService1" name="BasicHttpBinding_IService1" />
      <endpoint address="http://10.1.11.192:8001/StockDataPointsService/StockDataPointsService.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IStockDataPointsService"
        contract="DataPointService.IStockDataPointsService" name="BasicHttpBinding_IStockDataPointsService" />
    </client>
    <behaviors>
      <serviceBehaviors>
        <behavior name="Meta">
          <!-- To avoid disclosing metadata information, set the values below to false before deployment -->
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <!-- To receive exception details in faults for debugging purposes, set the value below to true.  Set to false before deployment to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="REST">
          <webHttp/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <protocolMapping>
      <add binding="webHttpBinding" scheme="http"/>
        <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>    
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <!--
        To browse web app root directory during debugging, set the value below to true.
        Set to false before deployment to avoid disclosing web app folder information.
      -->
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
